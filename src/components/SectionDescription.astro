---
import ParagraphText from './ParagraphText.astro';
import UnorderedList from './UnorderedList.astro';
interface Props {
	paragraph1?: string;
	paragraph2?: string;
	paragraph3?: string;
	unorderedList?: string;
}

const { paragraph1, paragraph2, paragraph3, unorderedList } = Astro.props;
---

<div class="max-w-180 mx-auto px-7.5">
	<ParagraphText paragraphText={paragraph1} />
	<ParagraphText paragraphText={paragraph2} />
	<UnorderedList unorderedList={unorderedList} />
	<ParagraphText paragraphText={paragraph3} />
</div>
